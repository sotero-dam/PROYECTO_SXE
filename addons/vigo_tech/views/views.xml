<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!--LA PRIMERA VISTA SERÁ LA EXTENSIÓN DE LA LISTA DE PRODUCTOS -->
    <record id="vigo_vista_lista_productos" model="ir.ui.view">
        <field name="name">LISTA PRODUCTOS VIGO-TECH</field>
        <field name="model">product.template</field>
  
        <!-- INDICAMOS QUE ESTA VISTA HEREDA DE OTRA EXISTENTE ( AL IGUAL QUE EN EL RESTO DE VISTAS DE ESTE MÓDULO ) -->
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">

            <!-- AGREGAMOS CAMPOS PERSONALIZADOS -->
            <xpath expr="//list" position="inside">
                <field name="vigo_tipo_componente" string="CATEGORIA PIEZA"/>
                <field name="vigo_consumo_w" string="WATIOS (W)" sum="TOTAL CONSUMO"/>
            </xpath>
            
        </field>
    </record>

    <!--LA SEGUNDA VISTA SERÁ LA EXTENSIÓN DEL FORMULARIO DE PRODUCTOS -->
    <record id="vigo_vista_form_productos" model="ir.ui.view">
        <field name="name">FORMULARIO PRODUCTOS VIGO-TECH</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            
            <xpath expr="//page[@name='general_information']" position="after">
                       
                <!-- CREA UNA NUEVA PESTAÑA EN EL FORMULARIO -->   
                <page string="DATOS VIGO-TECH">
                    <group>
                        <!-- AGRUPA CAMPOS EN DOS COLUMNAS POR DEFECTO -->
                        <group string="HARDWARE">
                            <field name="vigo_tipo_componente"/>
                            <field name="vigo_modelo_socket" placeholder="EJ: AM5..."/>
                        </group>
                        <group string="ELECTRICIDAD">
                            <field name="vigo_consumo_w"/>
                            <field name="vigo_es_gaming" widget="boolean_toggle"/>
                        </group>
                    </group>

                    <!-- GRUPO ADICIONAL FUERA DEL SISTEMA DE 2 COLUMNAS -->
                    <group string="NOTAS DEL TALLER">
                        <field name="vigo_notas_tecnicas" nolabel="1" placeholder="INDICACIONES PARA EL MONTAJE..."/>
                    </group>
                </page>
            </xpath>
            
        </field>
    </record>

  </data>
</odoo>